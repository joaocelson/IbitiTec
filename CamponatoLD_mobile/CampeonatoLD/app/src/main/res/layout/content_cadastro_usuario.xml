<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_cadastro_usuario"
    tools:context="com.ibititec.campeonatold.admin.CadastroUsuarioActivity">

    <EditText
        android:hint="Nome"
        android:id="@+id/txtNomeUsuario_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="E-mail"
        android:id="@+id/txtEmailUsuario_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txtSenhaUsuario_cadastro"
        android:hint="Senha"
        android:password="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtConfSenhaUsuario_cadastro"
        android:hint="Confirmar Senha"
        android:password="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnCadastrar_cadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar"/>

</LinearLayout>
