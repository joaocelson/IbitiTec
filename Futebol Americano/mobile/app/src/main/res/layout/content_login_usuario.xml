    <EditText
        android:id="@+id/txtSenhaUsuario_login"
        android:password="true"
        android:hint="Senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnLogin_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"/>

    <Button
        android:id="@+id/btnCadastrar_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar UsuÃ¡rio"/>

    <Button
        android:id="@+id/btnSemCadastrro_login"
        android:layout_width="match_parent"
