<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ivClassificacao"
            android:layout_width="110dp"
            android:layout_height="86dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="3dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:failureImage="@drawable/error_img"
            fresco:failureImageScaleType="centerInside"
            fresco:placeholderImage="@drawable/loading_img"
            fresco:retryImage="@drawable/retry_img"
            fresco:roundedCornerRadius="5dp" />

        <TextView
            android:id="@+id/txtPontos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.12"
            android:text="P"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtJogos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.12"
            android:text="J"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtVitorias"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.12"
            android:text="V"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtDerrotas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.12"
            android:text="D"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtEmpates"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.12"
            android:text="E"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtPP"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.12"
            android:text="PP"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtPC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.12"
            android:text="PC"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>


