<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_primeira_divisao"
    tools:context="com.ibititec.lffa.PrimeiraDivisaoActivity"
    android:background="@color/Black">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPrimeiraDivisaoTabela"
        android:src="@drawable/tabela"
        android:background="@color/Transparente"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPrimeiraDivisaoArtilharia"
        android:src="@drawable/arqueiro"
        android:background="@color/Transparente"
        android:layout_alignTop="@+id/btnPrimeiraDivisaoTabela"
        android:layout_toRightOf="@+id/btnPrimeiraDivisaoTabela"
        android:layout_toEndOf="@+id/btnPrimeiraDivisaoTabela"
        android:paddingLeft="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPrimeiraDivisaoClassificacao"
        android:src="@drawable/classificacao"
        android:background="@color/Transparente"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_alignTop="@+id/btnPrimeiraDivisaoArtilharia"
        android:layout_toLeftOf="@+id/btnPrimeiraDivisaoSobre"
        android:layout_toStartOf="@+id/btnPrimeiraDivisaoSobre" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPrimeiraDivisaoSobre"
        android:src="@drawable/help"
        android:background="@color/Transparente"
        android:layout_alignTop="@+id/btnPrimeiraDivisaoClassificacao"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TABELA"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:layout_alignRight="@+id/btnPrimeiraDivisaoTabela"
        android:layout_alignEnd="@+id/btnPrimeiraDivisaoTabela"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MAIOR PONTUADOR"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:layout_below="@+id/btnPrimeiraDivisaoArtilharia"
        android:layout_alignRight="@+id/btnPrimeiraDivisaoArtilharia"
        android:layout_alignEnd="@+id/btnPrimeiraDivisaoArtilharia"
        android:layout_alignLeft="@+id/btnPrimeiraDivisaoArtilharia"
        android:layout_alignStart="@+id/btnPrimeiraDivisaoArtilharia" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CLASSIFICAÇÃO"
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/btnPrimeiraDivisaoClassificacao"
        android:layout_alignStart="@+id/btnPrimeiraDivisaoClassificacao"
        android:textColor="@color/White"
        android:layout_alignTop="@+id/textView4" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AJUDA"
        android:id="@+id/textHelp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:textColor="@color/White" />
</RelativeLayout>
