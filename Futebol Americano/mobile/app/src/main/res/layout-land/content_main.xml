<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_main"
    tools:context=".MainActivity"
    android:background="@color/Black">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPrimeiraDivisao"
        android:src="@drawable/primeirad"
        android:background="@color/Transparente"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1ª Divisão"
        android:textAlignment="center"
        android:textSize="24dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/btnPrimeiraDivisao"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="97dp"
        android:layout_alignRight="@+id/btnPrimeiraDivisao"
        android:layout_alignEnd="@+id/btnPrimeiraDivisao"
        android:textColor="@color/White" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSegundaDivisao"
        android:src="@drawable/segundad"
        android:background="@color/Transparente"
        android:layout_marginRight="99dp"
        android:layout_marginEnd="99dp"
        android:layout_alignTop="@+id/btnPrimeiraDivisao"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2ª Divisão"
        android:textSize="24dp"
        android:textAlignment="center"
        android:id="@+id/textView6"
        android:layout_below="@+id/btnSegundaDivisao"
        android:layout_alignRight="@+id/btnSegundaDivisao"
        android:layout_alignEnd="@+id/btnSegundaDivisao"
        android:layout_alignLeft="@+id/btnSegundaDivisao"
        android:layout_alignStart="@+id/btnSegundaDivisao"
        android:textColor="@color/White" />

    <com.appodeal.ads.BannerView
        android:id="@+id/appodealBannerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</RelativeLayout>
