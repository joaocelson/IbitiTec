@model IEnumerable<Campeonato.Dominio.Partida>

    @{
        ViewBag.Title = "Futebol Lima Duarte";
        Layout = "~/Views/Shared/_Layout.cshtml";
        string campeonato = "";
    }


    <div class="row-fluid">

        @foreach (var item in Model)
        {
            <h3>Tabela <b>@item.NomeCampeonato</b></h3>
            campeonato = @item.NomeCampeonato;
            break;
        }

        <table class="table table-striped" style="width:50%" align="center">
            @foreach (var item in Model)
            {
                <tr>

                    <td style="text-align:left" colspan="2">
                        <b>@item.DataPartida.ToString("dd/MM/yyyy HH:mm")</b>
                    </td>
                    <td style="text-align:left" colspan="2">
                        <b>Rodada: @item.Rodada</b>
                    </td>
                    <td style="text-align:left" colspan="3">
                        <b>Campo: @item.LocalPartida</b>
                    </td>
                </tr>
                <tr>
                    <td style="text-align:right" colspan="1">
                        <img src="~/Content/images/escudo/@item.EscudoPequenoMandante" height="40">
                    </td>
                    <td style="text-align:right" colspan="1">
                        @item.TimeMandante
                    </td>
                    <td style="text-align:right" colspan="1">
                        <b>@item.GolMandante</b>
                    </td>
                    <td style="text-align:center" colspan="1">
                        <b>X</b>
                    </td>
                    <td style="text-align:right" colspan="1">
                        <b>@item.GolVisitante</b>
                    </td>
                    <td style="text-align:left" colspan="1">
                        @item.TimeVisitante
                    </td>

                    <td style="text-align:left" colspan="1">
                        <img src="~/Content/images/escudo/@item.EscudoPequenoVisitante" height="40">
                    </td>
                </tr>
                
            }
            <tr>
                <td colspan="2">
                    Dia 02/11/2014

                </td>
                <td colspan="5">Quartas de finais da Segunda Divisão.</td>
            </tr>
            <tr>
                <td colspan="2">
                    Data Semi-Finais

                </td>
                <td colspan="5">
                    1ª 09/11/2014 - 2ª 23/11/2014
                </td>
            </tr>

            <tr>
                <td colspan="2">
                    Data Finais


                </td>
                <td colspan="5">
                    1ª 30/11/2014 - 2ª 07/12/2014

                </td>
            </tr>
        </table>







